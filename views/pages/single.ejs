<%- include('../partials/header'); %>

<%- include('../partials/popup/scan'); %>
<%- include('../partials/popup/complete'); %>

    
<main>
    <button id="stop-camera-scan"></button>
    <div id="scanner"></div>

    <section id="product-detail">

        <section class="heading">
            <button id="edit-product-btn">
                <i class="fa fa-pencil"></i>
            </button>
            <div>
                <img src="<%= productInfo.product.image_url %>" alt="">
                <h1><%= productInfo.product.product_name %></h1>
            </div>

            <form action="/product/add/<%= productInfo.product._id %>" id="add-product-form" method="POST">
                <input type="submit" class="btn" data-barcode="<%= productInfo.product._id %>" value="Add to list">

                <fieldset>
                    <button type="button" class="btn decrease ">-</button>
                    <input type="number" name="product_amount" id="counter" min="1" value="0">
                    <button type="button" class="btn increase ">+</button>
                </fieldset>
            </form>

        </section>

        <ul>
            <li>
                <article><%= productInfo.product.ingredients_text %></article>
            </li>

            <li>
                <h2>Nutrition score</h2>
                <ul class="nutriscore">
                    <li id="nutriscore-A">A</li>
                    <li id="nutriscore-B">B</li>
                    <li id="nutriscore-C">C</li>
                    <li id="nutriscore-D">D</li>
                    <li id="nutriscore-E">E</li>
                </ul>
                <p></p>
            </li>

            <li>
                <article>
                    <h2>Product values total</h2>
                    <div>
                        <p>Carbohydrates:</p>
                        <span><%= productInfo.product.nutriments.carbohydrates %> g</span>
                    </div>

                    <div>
                        <p>Energy:</p>
                        <span><%= productInfo.product.nutriments.energy %> g</span>
                    </div>

                    <div>
                        <p>Fat:</p>
                        <span><%= productInfo.product.nutriments.fat %> g</span>
                    </div>

                    <div>
                        <p>Saturated-fat:</p>
                        <span><%= productInfo.product.nutriments['saturated-fat_100g'] %> g</span>
                    </div>

                    <div>
                        <p>Proteins:</p>
                        <span><%= productInfo.product.nutriments.proteins %> g</span>
                    </div>

                    <div>
                        <p>Sugars:</p>
                        <span><%= productInfo.product.nutriments.sugars %> g</span>
                    </div>
                </article>
            </li>

            <li>
                <article>
                    <h2>Values per 100g</h2>
                    <div>
                        <p>Carbohydrates:</p>
                        <span><%= productInfo.product.nutriments.carbohydrates_100g %> g</span>
                    </div>

                    <div>
                        <p>Energy:</p>
                        <span><%= productInfo.product.nutriments.energy_100g %> g</span>
                    </div>

                    <div>
                        <p>Fat:</p>
                        <span><%= productInfo.product.nutriments.fat_100g %> g</span>
                    </div>

                    <div>
                        <p>Saturated-fat:</p>
                        <span><%= productInfo.product.nutriments["saturated-fat_100g"] %> g</span>
                    </div>

                    <div>
                        <p>Proteins:</p>
                        <span><%= productInfo.product.nutriments.proteins_100g %> g</span>
                    </div>

                    <div>
                        <p>Sugars:</p>
                        <span><%= productInfo.product.nutriments.sugars_100g %> g</span>
                    </div>

                </article>
            </li>
        </ul>

    </section>
</main>
<%- include('../partials/footer'); %>